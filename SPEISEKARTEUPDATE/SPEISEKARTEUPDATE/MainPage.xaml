<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPEISEKARTEUPDATE.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="0"
            Padding="10"
            VerticalOptions="Center"
            BackgroundColor="NavajoWhite">


            <Image
                Source="page1.png"
                SemanticProperties.Description="1_page"
                HeightRequest="550"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Weiter"
                SemanticProperties.Hint="Next Page"
                Clicked="navigateTo"
                HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
